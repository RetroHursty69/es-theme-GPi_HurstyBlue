         <maxSize>0.15 0.05</maxSize>
      </image>
      <video name="md_video">
         <origin>0.5 0.5</origin>
         <pos>0.30 0.6</pos>
         <zIndex>5</zIndex>
         <maxSize>0.36 0.48</maxSize>
         <delay>2.00</delay>
         <showSnapshotNoVideo>true</showSnapshotNoVideo>
         <showSnapshotDelay>true</showSnapshotDelay>
      </video>
      <image name="md_marquee">
         <pos>1.042 0.035</pos>
         <origin>0 0</origin>
         <maxSize>0.15 0.15</maxSize>
      </image>
