      <text name="systemInfo">      
         <pos>0.0 0.873</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>ffffff</color>
         <fontPath>./_inc/fonts/zorque.ttf</fontPath>
	     <fontSize>0.07</fontSize>
         <zIndex>44</zIndex>	     
      </text>           
      <image name="system-background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <tile>false</tile>
         <path>./_inc/images/backgroundmenu.png</path>
      </image>
   </view>

   <view name="system,basic,detailed,video">
